<h1>All albums</h1>
<table>
  <tr>
    <th>#</th>
    <th>Owner</th>
    <th>Name</th>
    <th>description</th>
  <tr>
<% @albums.each_with_index do |album,index|%>
  <tr>
    <td><%=index + 1 %></td>
    <td><%= album.owner%></td>
    <td><%= album.name%></td>
    <td><%= album.description%></td>
    <td><%= link_to 'Show', album%></td>
    <td><%= link_to 'Destroy', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <tr>
  <% end %>
</table>
<%= link_to 'Create a new album', new_album_path%>

